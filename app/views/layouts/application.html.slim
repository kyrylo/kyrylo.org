doctype html
html
  head
    title = generate_title(content_for(:title))
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag '//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css', media: 'all'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    = favicon_link_tag '/favicon.gif'
  body
    #sticky-footer
      #layout
        #main
          header
            #site-logo
              = link_to_unless_current image_tag('logo.svg', height: 64), root_path
              = link_to_unless_current site_title, root_path, class: 'header-link'
            #mega
              = image_tag 'phonograph.jpg'
              h3 Important notification
              .message
                | I'm available for&nbsp;
                = link_to_unless_current 'hire', '/cv'
            - if current_user
              #admin-bar[class="adm"]
                ul
                  li = link_to new_post_path do
                    i[class="fa fa-file-powerpoint-o"]
                  li = link_to destroy_user_session_path, method: :delete do
                    i[class="fa fa-sign-out"]
          nav
            ul
              li = link_to_unless_current 'Articles', '/articles'
              li = link_to_unless_current 'Designs', '/designs'
              li = link_to_unless_current 'Projects', '/projects'
              li = link_to_unless_current 'Trips', '/trips'
              li = link_to_unless_current 'Translations', '/translations'
              li = link_to_unless_current 'Personal Wiki', 'http://wiki.kyrylo.org'
          #content
            == yield
      .push
    = render "layouts/footer"
