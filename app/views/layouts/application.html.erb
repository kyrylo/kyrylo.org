<!DOCTYPE html>
<html>
  <head>
    <title><%= generate_title content_for(:title) %></title>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag '/favicon.gif' %>
  </head>

  <body>
    <div id="sticky-footer">
      <div id="layout">
        <div id="main">
          <header>
            <div id="site-logo">
              <%= link_to_unless_current site_title, root_path, class: 'header-link' %>
            </div>

            <div id="mega">
              <%= image_tag 'phonograph.jpg' %>
              <h3>Important notification</h3>
              <div class="message">
                I'm available for <%= link_to_unless_current 'hire', '/cv' %>
              </div>
            </div>

            <% if current_user %>
              <div id="admin-bar" class="adm">
                <ul>
                  <li><%= link_to '[new post]', new_post_path %></li>
                  <li><%= link_to '[new trip]', new_trip_path %></li>
                  <li>
                    <%= link_to '[sign out]', destroy_user_session_path, method: :delete %>
                  </li>
                </ul>
              </div>
            <% end %>
          </header>

          <div id="content">
            <%= yield %>
          </div>
        </div>
      </div>

      <div class="push"></div>
    </div>

    <%= render 'layouts/footer' %>
  </body>
</html>
