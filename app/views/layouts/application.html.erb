<!DOCTYPE html>
<html>
  <head>
    <title><%= generate_title content_for(:title) %></title>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>

    <meta name="description" content="Kyrylo Silin" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1" />
    <meta name="apple-mobile-web-app-title" content="Kyrylo Silin">
    <meta name="application-name" content="Kyrylo Silin">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="theme-color" content="#ffffff">


    <link rel="icon" type="image/png" sizes="16x16" href="<%= image_path 'favicon-16x16.png' %>">
    <link rel="icon" type="image/png" sizes="32x32" href="<%= image_path 'favicon-32x32.png' %>">
    <link rel="apple-touch-icon" sizes="152x152" href="<%= image_path 'apple-touch-icon.png' %>">
    <link rel="manifest" href="<%= asset_path 'manifest.json' %>">
    <link rel="mask-icon" href="<%= asset_path 'safari-pinned-tab.svg' %>" color="#777777">
  </head>

  <body class="layout">
    <%= render 'layouts/header' %>
    <%= yield %>
    <%= render 'layouts/footer' %>
  </body>
</html>
