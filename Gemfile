source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '~> 4.2'

# Use postgresql as the database for Active Record
gem 'pg'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 4.0.0'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# See https://github.com/sstephenson/execjs#readme for more supported runtimes
# gem 'therubyracer', platforms: :ruby

# Use jquery as the JavaScript library
gem 'jquery-rails'

# Turbolinks makes following links in your web application faster.
# https://github.com/rails/turbolinks
gem 'turbolinks'
gem 'jquery-turbolinks'

# A customisable CSS file that makes browsers render all elements more
# consistently and in line with modern standards.
# https://github.com/markmcconachie/normalize-rails
gem 'normalize-rails'

gem 'redcarpet'
gem 'metadown'
gem 'friendly_id'
gem 'ace-rails-ap'
gem 'fotoramajs'
gem 'kaminari'
gem 'cancancan'
gem 'devise'
gem 'paperclip'
gem 'capistrano', '~> 3.2.0'
gem 'time_diff'
gem 'airbrake', '~> 6.2'
gem 'rails-assets-retina.js', source: 'https://rails-assets.org'
gem 'autoprefixer-rails', '~> 7.1'

group :development do
  gem 'rubocop', '~> 0.49', require: false
end

group :test do
  gem 'factory_girl_rails', '~> 4.8'
  gem 'faker', '~> 1.3'
  gem 'poltergeist', '~> 1.16'
  gem 'rspec-rails', '~> 3.6'
  gem 'shoulda-matchers', '~> 2.8'
  gem 'site_prism', '~> 2.9'
end

group :development, :test do
  gem 'pry-rails', '~> 0.3'
end
